package task.bigramcount;

import org.apache.hadoop.io.IntWritable;
import org.apache.hadoop.io.Text;
import org.apache.hadoop.mapreduce.Reducer;

public class BigramCountReducer extends Reducer<TextPair,IntWritable,TextPair,IntWritable>{

	@Override
	public void reduce(TextPair key,Iterable<IntWritable> value ,Context context)  throws IOException,Exception{
		int count = 0;
		for(IntWritable i :value) {
			count  += i.get();
			
		}
		context.write(new Text(key.toString()), new IntWritable(count));
		
		
	}
	
	
}
